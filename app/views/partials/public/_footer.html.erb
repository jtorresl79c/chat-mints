          <%#= image_tag 'footer-icon-instagram.svg', alt: 'Instagram' %>
          <%#= image_tag 'footer-icon-linked-in.svg', alt: 'Linked In' %>
          <%#= image_tag 'footer-icon-you-tube.svg', alt: 'Youtube', class: 'icon-youtube-padding-right'%>
<!--        </div>-->
<!--      </div>-->
    </div>
  </footer>
<% end %>